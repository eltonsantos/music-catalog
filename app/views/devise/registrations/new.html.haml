.container{:style => "margin-top:30px"}
  .col-md-4.col-md-offset-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title
          %strong Cadastrar
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = f.input :email, required: true, autofocus: true
          = f.input :password, required: true, hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @minimum_password_length), label: "Senha"
          = f.input :password_confirmation, required: true, label: "Confirme sua senha"
          %button.btn.btn-success.pull-right{:type => "submit"} Cadastrar
