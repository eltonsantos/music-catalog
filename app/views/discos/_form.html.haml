= simple_form_for(@disco, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification
  .form-inputs
    = f.association :categoria, prompt: "Selecione uma categoria"
    = f.input :name
    = f.input :image, as: :file
    = f.input :description
    = f.input :price
    = f.input :year
    = f.input :state, collection: ['Novo', 'Semi novo'], prompt: "Selecione um estado"
    = f.input :local, collection: ['Fortaleza', 'Bras√≠lia'], prompt: "Selecione uma cidade"
  .form-actions
    = f.button :submit
