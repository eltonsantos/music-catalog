%p#notice= notice

- if user_signed_in?
  .col-md-3
    %p.lead Loja de discos
    .list-group
      = link_to categorias_path, class: "list-group-item" do
        %i.fa.fa-plus
        Cadastrar categoria
      = link_to discos_path, class: "list-group-item" do
        %i.fa.fa-music
        Cadastrar discos
      = link_to '#', class: "list-group-item" do
        %i.fa.fa-question-circle
        Sobre

  .col-md-9      
    %p
      %strong Categoria:
      = @disco.categoria.name

    %p
      %strong Nome:
      = @disco.name
    %p
      %strong Imagem:
      = image_tag @disco.image.url(:medium)

    %p
      %strong Descrição:
      = @disco.description
    %p
      %strong Preço:
      = @disco.price
    %p
      %strong Ano:
      = @disco.year
    %p
      %strong Estado de conservação:
      = @disco.state
    %p
      %strong Local:
      = @disco.local
    = link_to 'Edit', edit_disco_path(@disco)
    |
    = link_to 'Back', discos_path

- else


  .col-md-12     
    %p
      %strong Categoria:
      = @disco.categoria.name
    %p
      %strong Nome:
      = @disco.name
    %p
      %strong Imagem:
      = image_tag @disco.image.url(:medium)

    %p
      %strong Descrição:
      = @disco.description
    %p
      %strong Preço:
      = @disco.price
    %p
      %strong Ano:
      = @disco.year
    %p
      %strong Estado de conservação:
      = @disco.state
    %p
      %strong Local:

      = @disco.local

    = link_to interesse_disco_path, {class: 'btn btn-warning', 'data-toggle' => 'modal', 'data-target' => '#modal-show', :remote => true} do
      %i.fa.fa-heart-o 
      Estou interessado!

#modal-interesse.modal.fade{:role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4.modal-title Tenho interesse no disco: #{@disco.name}
      .modal-body
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close